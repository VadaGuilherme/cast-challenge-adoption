@model IEnumerable<PetViewModel>

@if (Model.Any())
{
    <div class="alert alert-warning" role="alert">
        Animais que ainda não foram adotados
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome do Animal
                </th>
                <th>
                    Tipo do Animal
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypePetDescription)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        Todos os animais disponíveis já foram adotados.
    </div>
}