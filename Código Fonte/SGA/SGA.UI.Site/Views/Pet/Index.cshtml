@model SGA.UI.Site.Models.PetViewModel

    <div class="card-header">
        <img class="img-fluid mb-5 d-block mx-auto" src="~/lib/img/pets.png" alt="">
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypePetId" class="control-label"></label>
                    <select asp-for="TypePetId" class="form-control" asp-items="ViewBag.TypePetId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                    <button class="btn btn-default" asp-controller="Home">Voltar</button>
                </div>
            </form>
        </div>
    </div>
